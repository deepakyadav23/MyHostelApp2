<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator"
    android:ordering="sequentially"
    android:shareInterpolator="true">
    <scale
        android:duration="500"
        android:fromXScale="0.5"
        android:fromYScale="0.5"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1.25"
        android:toYScale="1.25" />

    <scale
        android:duration="500"
        android:fromXScale="1.25"
        android:fromYScale="1.25"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="500"
        android:toXScale="0.75"
        android:toYScale="0.75" />
    <scale
        android:duration="500"
        android:fromXScale="0.75"
        android:fromYScale="0.75"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="500"
        android:toXScale="0.8975"
        android:toYScale="0.8975" />
    <scale
        android:duration="500"
        android:fromXScale="0.8975"
        android:fromYScale="0.8975"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="500"
        android:toXScale="1.125"
        android:toYScale="1.125" />
    <scale
        android:duration="500"
        android:fromXScale="1.125"
        android:fromYScale="1.125"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="500"
        android:toXScale="1.0"
        android:toYScale="1.0" />
</set>