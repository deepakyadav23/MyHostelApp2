<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:alpha="0"
        android:id="@+id/usercard_hostel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="Nek Chand Tower 4"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <FrameLayout
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_margin="6dp"
            android:id="@+id/usercard_img_card"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:cardCornerRadius="80dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/usercard_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />
        </android.support.v7.widget.CardView>

    </FrameLayout>
    <TextView
        android:alpha="0"
        android:id="@+id/usercard_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:padding="3dp"
        android:text="DEEPAK YADAV"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:alpha="0"
        android:id="@+id/usercard_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1dp"
        android:text="Bachelor of Engineering"
        android:textColor="@color/colorSecondaryText"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:alpha="0"
        android:id="@+id/usercard_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1dp"
        android:text="Computer Science and Engineering"
        android:textColor="@color/colorSecondaryText"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:alpha="0"
        android:layout_gravity="center"
        android:id="@+id/usercard_ack"
        android:layout_margin="6dp"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:text="That's me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>